<launch>
  <param name="display" type="int" value="0"/>
  <node name="sr4000" pkg="swissranger_camera"
	type="swissranger_camera" respawn="false" output="screen"
	clear_params="true">
    <param name="frame_id" type="string" value="sr4000_base"/>
    <param name="camera_info_manager/url"
	   value="file:///$(find cr_capture)/launch/2010-02-16-15-14-42-sr4000.yaml"/>
    <remap from="~distance/image_raw" to="~image_depth"/>
  </node>
  <!--
  <node name="iview" pkg="image_view" type="image_view">
    <remap from="image" to="sr4000/intensity/image_raw"/>
  </node>
  -->
</launch>
