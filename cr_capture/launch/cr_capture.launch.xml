<!-- -*- mode: xml -*- -->
<launch>
  <node name="cr_capture" pkg="cr_capture" type="cr_capture"
	output="screen" machine="vision">
    <remap from="~left/image" to="FleaCam/left/camera/image_rect_color"/>
    <remap from="~left/camera_info" to="FleaCam/left/camera/camera_info"/>
    <remap from="~right/image" to="FleaCam/right/camera/image_rect_color"/>
    <remap from="~right/camera_info" to="FleaCam/right/camera/camera_info"/>
    <!--
    <remap from="~range/image" to="RangeSensor/sr4000/image_depth"/>
    <remap from="~range/camera_info" to="RangeSensor/sr4000/camera_info"/>
    -->
    <remap from="~range" to="RoomRangeSensor/sr4000"/>
    <rosparam command="load" file="$(find cr_capture)/launch/2010-02-16-15-14-42-external.yaml"/>

    <param name="max_range" value="5.0"/>
    <param name="calculation_pixel" value="false"/>
    <param name="use_filter" value="true"/>
    <param name="use_images" value="true"/>
    <!-- <param name="intensity_threshold" value="0"/> -->
    <!-- <param name="confidence_threshold" value="100"/> -->
  </node>
</launch>
