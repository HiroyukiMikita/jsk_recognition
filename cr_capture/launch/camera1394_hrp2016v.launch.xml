<launch>
  <group ns="CameraL">
    <param name="display" type="int" value="0"/>

    <node name="cam" pkg="camera1394" type="camera1394"
	  respawn="false" output="screen"
	  clear_params="true">
      <param name="video_mode" value="640x480_rgb"/>
      <param name="fps" value="15"/>
      <param name="guid" value="00b09d01008c8f46"/>
      <param name="encoding" value="rgb8"/>
      <param name="frame_id" type="string" value="left_base"/>
      <param name="camera_info_manager/url"
	     value="file:///$(find cr_capture)/launch/2010-02-16-15-14-42-stereo-left.yaml"/>
      <remap from="~camera/image_raw" to="image_raw"/>
      <remap from="~camera/camera_info" to="camera_info"/>
    </node>

    <node name="proc" pkg="image_proc" type="image_proc">
      <!--<remap from="image_raw" to="cam/camera/image_raw"/>
	  <remap from="camera_info" to="cam/camera/camera_info"/> -->
    </node>

    <!--
    <node name="iview" pkg="image_view" type="image_view">
      <remap from="image" to="image_rect_color"/>
    </node>
    -->
  </group>

  <group ns="CameraR">
    <param name="display" type="int" value="0"/>

    <node name="cam" pkg="camera1394" type="camera1394" respawn="false" output="screen">
      <param name="fps" value="15"/>
      <param name="video_mode" value="640x480_rgb"/>
      <param name="guid" value="00b09d01008c8f44"/>
      <param name="frame_id" type="string" value="right_base"/>
      <param name="encoding" value="rgb8"/>
      <param name="camera_info_manager/url"
	     value="file:///$(find cr_capture)/launch/2010-02-16-15-14-42-stereo-right.yaml"/>
      <remap from="~camera/image_raw" to="image_raw"/>
      <remap from="~camera/camera_info" to="camera_info"/>
    </node>

    <node name="proc" pkg="image_proc" type="image_proc">
      <!-- <remap from="image_raw" to="cam/camera/image_raw"/>
	   <remap from="camera_info" to="cam/camera/camera_info"/> -->
    </node>
    <!--
    <node name="iview" pkg="image_view" type="image_view">
      <remap from="image" to="image_rect_color"/>
    </node>
    -->
  </group>

</launch>
